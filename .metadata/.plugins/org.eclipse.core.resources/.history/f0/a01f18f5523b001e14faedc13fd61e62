package clothes_p;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Component;

import jakarta.annotation.Resource;
import persons_p.personParts.Body;
import persons_p.personParts.Foots;
import persons_p.personParts.Hands;
import persons_p.personParts.Head;

// 사람은 각각 머리, 몸, 손, 발 구성요소를 하나씩 가지기 때문에 component로 구성
@Component
public class Person {
	@Resource
	Head hd; // 머리
	@Resource
	Body bb; // 몸
	@Resource
	Hands hns; // 손
	@Resource
	Foots fots; // 발

	@Override
	public String toString() {
		return "Person [hd=" + hd + ", bb=" + bb + ", hns=" + hns + ", fots=" + fots + "]";
	}
}
