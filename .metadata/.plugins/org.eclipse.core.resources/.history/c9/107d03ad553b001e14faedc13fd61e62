package persons_p.personParts;

import clothes_p.clothesParts.ClotheBodyBottom;
import clothes_p.clothesParts.ClotheBodyTop;
import clothes_p.clothesParts.SuitClothe;

// 몸
public class Body {
	String name = "몸";
	ClotheBodyTop cbt; // 상의
	ClotheBodyBottom cbb; // 하의
	SuitClothe sc; // 한벌옷
	
	public Body() {
		
	}
	
	public Body(String name, ClotheBodyTop cbt, ClotheBodyBottom cbb) {
		super();
		this.name = name;
		this.cbt = cbt;
		this.cbb = cbb;
	}
	
	public Body(String name, SuitClothe sc) {
		super();
		this.name = name;
		this.sc = sc;
	}

	@Override
	public String toString() {
		return "Body [name=" + name + ", cbt=" + cbt + ", cbb=" + cbb + ", sc=" + sc + "]";
	}
}
