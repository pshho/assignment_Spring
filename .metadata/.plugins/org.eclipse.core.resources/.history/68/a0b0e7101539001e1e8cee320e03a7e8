package bar.store;

import java.util.List;
import java.util.Map;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.beans.factory.annotation.Qualifier;

import bar.menu.Alcohol;
import bar.menu.DrinkDish;
import jakarta.annotation.Resource;

public class Table {
	String tableName; // 가게의 몇 번 테이블
	int tableSum; // 그 테이블의 전체 가격
	
	@Autowired
	@Qualifier("alcs")
	List<Map<Alcohol, Integer>> alcs; // 주문한 술과 개수
	
	@Resource
	List<Map<DrinkDish, Integer>> drinkOrders; // 주문한 안주와 개수

	public String getTableName() {
		return tableName;
	}

	public void setTableName(String tableName) {
		this.tableName = tableName;
	}

	public int getTableSum() {
		return tableSum;
	}

	public void setTableSum(int tableSum) {
		this.tableSum = tableSum;
	}

	public List<Map<Alcohol, Integer>> getAlcs() {
		return alcs;
	}

	public void setAlcs(List<Map<Alcohol, Integer>> alcs) {
		this.alcs = alcs;
	}

	public List<Map<DrinkDish, Integer>> getDriDish() {
		return driDish;
	}

	public void setDriDish(List<Map<DrinkDish, Integer>> driDish) {
		this.driDish = driDish;
	}
	@Override
	public String toString() {
		return "Table [tableName=" + tableName + ", tableSum=" + tableSum + ", alcs=" + alcs + ", driDish=" + driDish
				+ "]";
	}
}
